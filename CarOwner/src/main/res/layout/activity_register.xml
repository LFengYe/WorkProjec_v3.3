<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.com.caronwer.activity.RegisterActivity">

    <ImageView
        android:id="@+id/iv_close22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:src="@mipmap/login_exit" />

    <RelativeLayout
        android:id="@+id/rl_login22"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/login_dialog_bg">


        <TextView
            android:id="@+id/tv_login22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="@string/register"

            android:textColor="#060606"
            android:textSize="15sp" />


        <LinearLayout
            android:id="@+id/ll_validate"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/tv_login22"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_account22"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:hint="@string/hint_input_account"
                    android:textSize="@dimen/normal_font" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/color_blue" />

                <EditText
                    android:id="@+id/et_validate_code22"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:hint="@string/hint_validate_code"
                    android:textSize="@dimen/normal_font" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/color_blue" />

            </LinearLayout>

            <View
                android:layout_width="0.6dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/color_blue" />

            <TextView
                android:id="@+id/tv_get_code22"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="@string/get_validate_code"
                android:textSize="@dimen/normal_font" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/rl_password22"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/ll_validate"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp">

            <EditText
                android:id="@+id/et_password22"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/hint_set_psd"
                android:inputType="textPassword"
                android:textSize="@dimen/normal_font" />

            <ImageView
                android:id="@+id/iv_login_eye22"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:src="@mipmap/eye_close" />
        </LinearLayout>


        <Button
            android:id="@+id/bt_ok22"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_below="@+id/rl_password22"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_button2"
            android:text="@string/register_and_agree"
            android:textColor="@color/color_white"
            android:textSize="@dimen/normal_font" />

        <TextView
            android:id="@+id/register_protocol"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/bt_ok22"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/register_protocol"
            android:textColor="@color/color_blue"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>
